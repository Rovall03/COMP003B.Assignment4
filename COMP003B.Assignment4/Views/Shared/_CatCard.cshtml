 @model COMP003B.Assignment4.Models.Cat

<div class="card mb-3">
    <div class="card-body">
        <h4 class="card-title">@Model.Name</h4>
        <p class="card-text"><strong>Age:</strong> @Model.Age years</p>
        <p class="card-text"><strong>Breed:</strong> @Model.Breed</p>
        <p class="card-text">@Model.Description</p>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-primary">View Photo</a>
    </div>
</div>
